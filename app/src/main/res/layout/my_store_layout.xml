<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        >

        <TextView
            android:id="@+id/my_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bolibio_valencienne"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/my_store_opening_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_store_name"
            android:text="@string/opening_days"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/my_store_opening_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_store_opening_days"
            android:text="@string/opening_hours"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/my_store_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_store_opening_hours"
            android:layout_marginTop="50dp"
            android:background="@color/button_color"
            android:onClick="MyStoreClickMethod"
            android:text="@string/contact_director"
            android:textColor="@color/white_color"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <TextView
            android:id="@+id/storlocator_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:text="@string/contact_another_director"
            android:textColor="@color/text_color"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/storelocator_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="40"
            android:background="@color/button_color"
            android:gravity="center"
            android:onClick="MyStoreClickMethod"
            android:text="@string/click_here"
            android:textColor="@color/white_color"/>

    </LinearLayout>

</RelativeLayout>
